		<!-- MAIN -->
		<main>
			<div class="head-title">
				<div class="left">
					<h1>Customers</h1>
					<ul class="breadcrumb">
						<li>
							<a href="/admin/customers">Customers</a>
						</li>
						<!-- <li><i class='bx bx-chevron-right' ></i></li> -->
						<!-- <li>
							<a class="active" href="/admin/customers">Customers</a>
						</li> -->
					</ul>
				</div>
				
			</div>


            <div class="table-data">
				<div class="order">
					<div class="head">
						<h3>User List</h3>
                        <!-- <nav> 
                            <form action="#">
                                <div class="form-input">
                                    <input type="search" id="myInput" onkeyup="myFunction()" name="search" placeholder="Search...">
                                    <button type="submit" class="search-btn"><i class='bx bx-search' ></i></button>
                                </div>
                            </form>
                            </nav>
						 -->
					</div>
                    
					<table id="myTable" >
						<thead>
							<tr>
                                <th>Sl.No</th>
								<th>User</th>
                                <th>Email</th>
                                <th>Mobile</th>
								<th>Status</th>
                                <th>Block/unBlock</th>
                                <th>Details</th>
							</tr>


                            
						</thead>

						<tbody>
                        
							<% 
                                if(users.length > 0){
                                    for(let i=0; i <users.length; i++){
                                        %>
                                        <tr >
                                            <td><%= i+1 %></td>
                                            <td><%= users[i].name %></td>
                                            <td><%= users[i].email %></td>
                                            <td><%= users[i].mobile %></td>
                                            <% if(users[i].is_verified == 1){%>
												<td><span style="background-color:dodgerblue;" class="status completed">Active</span></td>

											<%}else{%>
												<td><span style="background-color: red;" class="status completed">InActive</span></td>

											<%}%>
												
											
											<% if(users[i].is_verified == 1){%>
											<td> <div class="form-check form-switch">
												<a href="/admin/blockUser?id=<%= users[i]._id %>"><button class=" btn btn-outline-primary" type="submit"> Block </button></a>
												</div>	

											</td>
											<%}else{%>
											<td> <div class="form-check form-switch">
												<a href="/admin/blockUser?id=<%= users[i]._id %>"><button class=" btn btn-outline-primary" type="submit"> UnBlock</button></a>
												</div>	

											</td>
											<%}%>
											</form>
                                              <td> <a href="/admin/viewCustomers?id=<%= users[i]._id %>" class="btn btn-outline-info">Info</a>
                                              </td>

                                        </tr>
                                        <%
                                    }
                                }else{

                                    %>
                                    <tr> 
                                    <td colspan = "5">Users Not Found </td>
                                    </tr>
                                    <%
                                }
                            %>
							
						</tbody>
					</table>
				</div>
            
