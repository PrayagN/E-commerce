              <div class="row ">
                <div class="col-sm-3">
                  <p class="mb-0">Category</p>
                </div>
                <div class="col-sm-9">
                    <input type="text" name="category" style="border: none;" value="<%=categories.name%>" >
                </div>
              </div>
              <hr>
              
              <div class="row">
                <div class="col-sm-3">
                  <p class="mb-0">Image</p>
                </div>
                <div class="col-sm-9">
                  <div class="custom-file">
                    <input type="file" name="image"  onchange="viewImage(event)"    >
                   
                </div>
                </div>
              </div>
              
              <hr>
			  <input type="hidden" name="id" value="<%= categories._id %>">
              <button type="submit" class="btn btn-primary">Save</button>

              </form>
            </div>
          </div>
          
    </div>
			
            
