                    <option><%=orderData.orderStatus%></option>
                    <%if(orderData.orderStatus == 'Cancelled'||orderData.orderStatus =='Delivered'){%>

                   <%}else{%>
                       <option>Placed</option>
                    <option>Shipped</option>
                    <option>Out for Delivery</option>
                    <option>Delivered</option>
                    <%}%>
                   
                  </select>
              </div>
              
