          <div class="card mb-4 mt-3 me-4" >
            <form class="card-body" action="/admin/updateStatus" method="post">
          
              <div class="row">
                <div class="col-sm-3">
                  <p class="mb-0 ">OrderID</p>
                </div>
                <div class="col-sm-9">
                    <p><%= orderData._id %></p>
                </div>
              </div>
              <div class="row">
                <div class="col-sm-3">
                  <p class="mb-0 ">Username</p>
                </div>
                <div class="col-sm-9">
                    <p><%= orderData.userId.name %></p>
                </div>
              </div>
              <div class="row">
                <div class="col-sm-3">
                  <p class="mb-0 ">Products</p>
                </div>
                <div class="col-sm-9 ">
                    <%for(let i=0;i<orderData.products.length;i++){%>
                      <div class="d-flex ">
                        <img src="/productImages/<%= orderData.products[i].productId[0].image[0] %>" width="100px" height="100px" alt="">
                      <p><%= orderData.products[i].productId[0].name%><br><span class="text-muted ">qty:</span><%=orderData.products[i].quantity%></p>
                        
                      </div>  
                      
                        
                    <%}%>
                   
                </div>
              </div>
              
              <div class="row pt-4">
                <div class="col-sm-3">
                  <p class="mb-0">Total</p>
                </div>
                <div class="col-sm-9">
                    <p>â‚¹<%= orderData.total %></p>
                </div>
              </div>
              
              <div class="row pt-4">
                <div class="col-sm-3">
                  <p class="mb-0">Date</p>
                </div>
                <div class="col-sm-9">
                  <p><%= orderData.date %></p>
                </div>
              </div>
              
              <div class="row pt-4">
                <div class="col-sm-3">
                  <p class="mb-0">Time</p>
                </div>
                <div class="col-sm-9 ">
                 <p><%= orderData.time %></p>
                </div>
              </div>
              <div class="row pt-4">
                <div class="col-sm-3">
                  <p class="mb-0">Payment Method</p>
                </div>
                <div class="col-sm-9 ">
                 <p><%= orderData.paymentMethod %></p>
                </div>
              </div>
              
              <div class="row pt-4">
                <div class="col-sm-3">
                  <p class="mb-0">Payment Status</p>
                </div>
                <div class="col-sm-9 ">
                 <p><%= orderData.paymentStatus %></p>
                </div>
              </div>
              <div class="row pt-4">
                <div class="col-sm-3">
                  <p class="mb-0">Order Status</p>
                </div>
                <!-- <div class="dropdown">
                    <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown"  aria-expanded="false">
                      Pending
