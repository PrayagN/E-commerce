		<!-- MAIN -->
		<main>
			<div class="head-title">
				<div class="left">
					<h1>Products</h1>
					<ul class="breadcrumb">
						<li>
							<a class="active" href="/admin/Products">Products</a>
						</li>
                        <li><li><i class='bx bx-chevron-right' ></i></li>
							<a class="active" href="#">Products Details</a>
						</li>
					</ul>
				</div>
                
			</div>



    <!-- <div class="container py-5"> -->
      
    <div class="" style="border-radius: 20px; background-color: #f9f9f9;"> 
      <div class="row  ">
        <div class="col-lg-4">
          <div class="card mb-4 mt-3 ms-4" style="background-color: #f9f9f9;">
            <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
              <div class="carousel-inner">
                <% for (let i = 0; i < product.image.length; i++) { %>
                  <div class="carousel-item <%= i === 0 ? 'active' : '' %>">
                    <img src="/productImages/<%= product.image[i] %>" class="d-block w-100" alt="...">
                  </div>
                <% } %>
              </div>
              <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
              </button>
              <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
              </button>
            </div>
          </div>
        </div>
        
        <div class="col-lg-8" >
          <div class="card mb-4 mt-3 me-4" >
            <div class="card-body">
          
              <div class="row">
                <div class="col-sm-3">
                  <p class="mb-0 ">Product Name</p>
                </div>
                <div class="col-sm-9">
                    <p><%= product.name %></p>
                </div>
              </div>
              
              <div class="row pt-4">
                <div class="col-sm-3">
                  <p class="mb-0"> Price</p>
                </div>
                <div class="col-sm-9">
                    <p><%= product.price %></p>
                </div>
              </div>
              
              <div class="row pt-4">
                <div class="col-sm-3">
                  <p class="mb-0">OfferPrice</p>
                </div>
                <div class="col-sm-9">
                  <p><%= product.offerPrice %></p>
                </div>
              </div>
              
              <div class="row pt-4">
                <div class="col-sm-3">
                  <p class="mb-0">Brand</p>
                </div>
                <div class="col-sm-9 ">
                 <p><%= product.brand %></p>
                </div>
              </div>
              <% if(product.processor){%>
                <div class="row pt-4">
                  <div class="col-sm-3">
                    <p class="mb-0">Processor</p>
                  </div>
                  <div class="col-sm-9 ">
                   <p><%= product.processor %></p>
                  </div>
                </div>
                
                <div class="row pt-4">
                  <div class="col-sm-3">
                    <p class="mb-0">Ram Memory</p>
                  </div>
                  <div class="col-sm-9 ">
                   <p><%= product.ram %></p>
                  </div>
                </div>
                <div class="row pt-4">
                  <div class="col-sm-3">
                    <p class="mb-0">Storage</p>
                  </div>
                  <div class="col-sm-9 ">
                   <p><%= product.ssd %></p>
                  </div>
                </div>
                <div class="row pt-4">
                  <div class="col-sm-3">
                    <p class="mb-0">Operating System</p>
                  </div>
                  <div class="col-sm-9 ">
                   <p><%= product.operatingSystem %></p>
                  </div>
                </div>
             <% }else{%>

            <% }%>
              
              <div class="row pt-4">
                <div class="col-sm-3">
                  <p class="mb-0">category</p>
                </div>
                <div class="col-sm-9">
                  <p class="text-muted mb-0 "><%= product.category.name %></p>
                </div>
                
              <div class="row pt-4">
                <div class="col-sm-3">
                  <p class="mb-0">Stocks</p>
                </div>
                <div class="col-sm-9">
                  <p class="text-muted mb-0 "><%= product.stocks %></p>
                </div>
              </div>
              
              <div class="row pt-4">
                <div class="col-sm-3">
                  <p class="mb-0">Description</p>
                </div>
                <div class="col-sm-9">
                  <p class="text-muted mb-0 "><%= product.description %></p>
                </div>
              </div>
            </div>
            <div class="d-flex">
              <a href="/admin/editProduct?id=<%=product._id%>"><button type="button" class="btn btn-success mt-3">Edit</button></a>
            
            <% if(product.list == 0){%>
             <div class="form-check form-switch">
              <button class=" btn btn-danger mt-3  " onclick="myFunction()" type="submit"> hide </button>
                </div>	

              
              <%}else if(product.list ==1){%>
             <div class="form-check form-switch">
                <button class=" btn btn-primary mt-3  " onclick="myFunction1()" type="submit"> unhide</button>
                </div>	

            
              <%}%>    
             
            </div>
            
            <!-- <button type="submit" onclick="myFunction()"   class="btn btn-danger mt-3"  >Hide</button>     -->
            
          </div>
          <script> 
          function myFunction() {
	
            Swal.fire({
              title: 'Are you sure ?',
              text: "You want to hide this!",
              icon: 'warning',
              showCancelButton: true,
              confirmButtonColor: '#3085d6',
              cancelButtonColor: '#d33',
              confirmButtonText: 'Yes, confirm!'
            }).then((result) => {
              if (result.value) {
                window.location.href = '/admin/deleteProduct?id=<%=product._id%>';
              }
            })
          }
          function myFunction1() {
	
  Swal.fire({
    title: 'Are you sure ?',
    text: "You want to unhide this!",
    icon: 'warning',
    showCancelButton: true,
    confirmButtonColor: '#3085d6',
    cancelButtonColor: '#d33',
    confirmButtonText: 'Yes, confirm!'
  }).then((result) => {
    if (result.value) {
      window.location.href = '/admin/deleteProduct?id=<%=product._id%>';
    }
  })
}
    </script>


            
		</main>
