<script>
const fullName = document.getElementById('name');

fullName.addEventListener('input', function() {
  const regex = /^[A-Za-z]+(([',. -][A-Za-z ])?[A-Za-z]*)*$/;
  if (!regex.test(fullName.value)) {
    fullName.setCustomValidity('Please enter a valid full name.');
  } else {
    fullName.setCustomValidity('');
  }
});

document.getElementById('email').addEventListener('input',function(){
  const email = document.getElementById('email');
  const regex =/^(([^<>()[\]\\.,;:\s@\"]+(\.[^<>()[\]\\.,;:\s@\"]+)*)|(\".+\"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,3}))$/;
    if(!regex.test(email.value)){
      email.setCustomValidity('Enter valid email');
    }else{
      email.setCustomValidity('');
    }    
});

const password = document.getElementById('psw');
const confirmPassword = document.getElementById('re_psw');

password.addEventListener('input', function() {
  if (password.value.length < 5) {
    password.setCustomValidity('Password must be at least 5 characters.');
  } else {
    password.setCustomValidity('');
  }
});

confirmPassword.addEventListener('input', function() {
  if (password.value !== confirmPassword.value) {
    confirmPassword.setCustomValidity('Passwords do not match.');
  } else {
    confirmPassword.setCustomValidity('');
  }
});

const mobileNumber = document.getElementById('mob');
mobileNumber.addEventListener('input', function() {
  const regex = /^[0-9]{10}$/;
  if (!regex.test(mobileNumber.value)) {
    mobileNumber.setCustomValidity('Please enter a valid 10-digit mobile number.');
  } else {
    mobileNumber.setCustomValidity('');
  }
});



</script>