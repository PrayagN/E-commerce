<%- include('../layouts/header.ejs') %>
    <section class="vh-100" >
      <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
          <div class="col-lg-12 col-xl-11">
            <div class="card text-black" style="border-radius: 25px">
              <div class="card-body p-md-5">
                <div class="row justify-content-center">
                  <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
                    <div>
                      <% if(typeof message !== 'undefined'){ %>
                      <p
                        style="
                          color: red;
                          padding-left: 100px;
                          padding-bottom: 30px;
                        "
                      >
                        <%= message %>
                      </p>
                      <% } %>
                    </div>
                    <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">
                      Sign up
                    </p>

                    <form
                      action="/signup"
                      method="post"
                      
                    >
                      <div class="d-flex flex-row align-items-center mb-4">
                        <i class="fas fa-user fa-lg me-3 fa-fw"  style="margin-top: -30px;"></i>
                        <div class="form-outline flex-fill mb-0">
                          <input
                            type="text"
                            id="name"
                            class="form-control"
                            name="usrn"
                            required,
                            autocomplete="off"
                          />
                          <label class="form-label" for="form3Example1c"
                            >Your Name</label
                          >
                        </div>
                      </div>

                      <div class="d-flex flex-row align-items-center mb-4">
                        <i class="fas fa-envelope fa-lg me-3 fa-fw"  style="margin-top: -30px;"></i>
                        <div class="form-outline flex-fill mb-0">
                          <input
                            type="email"
                            class="form-control"
                            name="em"
                            id="email"
                            required
                            autocomplete="off"
                          />
                          <label class="form-label" for="form3Example3c"
                            >Your Email</label
                          >
                        </div>
                      </div>
                      

                      <div class="d-flex flex-row align-items-center mb-4">
                        <i class="fas fa-lock fa-lg me-3 fa-fw"  style="margin-top: -30px;"></i>
                        <div class="form-outline flex-fill mb-0">
                          <input
                            type="password"
                            class="form-control"
                            name="psw"  
                            id="psw"
                            required
                            autocomplete="off"
                          />

                          <label class="form-label" for="form3Example4c"
                            >Password</label
                          >
                        </div>
                      </div>

                      <div class="d-flex flex-row align-items-center mb-4">
                        <i class="fas fa-key fa-lg me-3 fa-fw"  style="margin-top: -30px;"></i>
                        <div class="form-outline flex-fill mb-0">
                          <input
                            type="password"
                            class="form-control"
                            name="psw1"
                            id="re_psw"
                            required
                            autocomplete="off"
                          />
                          <label class="form-label" for="form3Example4cd"
                            >Repeat your password</label
                          >
                        </div>
                      </div>
                    

                      <div class="d-flex flex-row align-items-center mb-4">
                        <i class="fas fa-key fa-lg me-3 fa-fw" style="margin-top: -30px;"></i>
                        <div class="form-outline flex-fill mb-0">
                          <input
                            type="number"
                            id="mob"
                            class="form-control"
                            name="mob"
                            maxlength="10"
                            required
                            autocomplete="off"
                            
                          />
                          <label class="form-label" for="form3Example4cd"
                            >Mobile</label
                          >
                    
                        </div>
                      </div>
                    

                      <div
                        class="d-flex justify-content-center mx-4 mb-3 mb-lg-4"
                      >
                        <button
                        
                          type="submit"
                          class="btn btn-primary btn-lg"
                        >
                          Register
                        </button>
                      </div>
                    </form>
                  </div>
                  <div
                    class="col-md-10 col-lg-6 col-xl-7 align-items-center mt-5 order-1 order-lg-2"
                  >
                    <img
                      src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                      class="img-fluid mt-5"
                      alt="Sample image" 
                    />
                    <div class="text-center">
                        <div>
                          <p class="small fw-bold mt-2 pt-1 mb-0">
                            Already have an account
                            <a href="/login" class="link-primary">Login</a>
                          </p>
                        </div>
                  </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

  <style>
    input::-webkit-outer-spin-button,
input::-webkit-inner-spin-button {
  -webkit-appearance: none;
  margin: 0;
}
